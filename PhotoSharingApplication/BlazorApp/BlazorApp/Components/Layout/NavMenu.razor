<MudPaper Height="100%" Width="100%" Style="overflow:hidden; position:relative; border-radius: 0px;">
    <MudDrawerContainer Class="mud-height-full mud-width-full">
        <MudDrawer Width="100%" @bind-Open="@_open" Elevation="0" Variant="@DrawerVariant.Persistent" Color="Color.Primary">
            <MudDrawerHeader>
                <MudText Typo="Typo.h6">My Awesome Photo Library!</MudText>
            </MudDrawerHeader>
            <MudNavMenu>
                <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Grid3x3" IconColor="Color.Inherit" Href="/">Photos</MudNavLink>
                <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Create" IconColor="Color.Inherit" Href="/photos/create">Upload Photo</MudNavLink>
            </MudNavMenu>
        </MudDrawer>
    </MudDrawerContainer>
</MudPaper>

@code {
    private bool _open = true;
}